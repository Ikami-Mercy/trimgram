# Application Configuration
DEBUG=False

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.vercel.app

# Session Configuration
# Session time-to-live in seconds (default: 1800 = 30 minutes)
SESSION_TTL_SECONDS=1800

# Instagram API Configuration
# Delay between Instagram API requests in seconds (default: 2.0)
# DO NOT set this lower than 2.0 to avoid rate limiting
INSTAGRAM_REQUEST_DELAY=2.0

# Analysis Configuration
# Maximum number of non-followers to show (default: 100)
MAX_NON_FOLLOWERS_SHOWN=100

# Number of posts to analyze per account (default: 12)
POSTS_TO_ANALYZE=12

# Unfollow Configuration
# Delay between unfollow operations in seconds (default: 15.0)
# DO NOT set this lower than 10.0 to avoid rate limiting and account flags
UNFOLLOW_DELAY_SECONDS=15.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
